@model Jobblisting

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <div class="card mb-3 post-item">
        <div class="card-header d-flex flex-column align-items-start card-header-custom solid-line">
            <div class="d-flex justify-content-between w-100">
                <h3>@Model.Title</h3>
            </div>
            <div class="post-content">
                <p style="color: white;">@Model.Content</p>
            </div>
        </div>

        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <span class="text-muted">by <a asp-controller="Company" asp-action="Profile" asp-route-id="@Model.Company.Id" class="user-link no-underline">@Model.Company.Name</a></span>
                    <p>Send your application to: @Model.Company.Email</p>
                    <p>Visit our webpage: @Model.Company.WebbPage</p>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-sm btn-custom-dark solid-line mt-2">Back to List</a>
    </div>
</div>