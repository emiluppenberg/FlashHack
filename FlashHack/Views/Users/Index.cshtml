@{
    var isAdmin = Context.Session.GetString("IsAdmin") == "True";

    if (!isAdmin)
    {
        Context.Response.Redirect("/Home/Index");
    }
}

@model IEnumerable<FlashHack.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Bio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProfilePicURL)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rating)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Signature)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsPremium)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsAdmin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShowEmail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShowPhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShowEmployer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShowToRecruiter)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShowRating)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProfilePicURL)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Signature)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsPremium)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsAdmin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShowEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShowPhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShowEmployer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShowToRecruiter)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShowRating)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>