@model FlashHack.Models.User

@{
    ViewData["Title"] = "User Profile";
}

<h2>@Model.FirstName @Model.LastName's Profile</h2>

<div class="card">
    <div class="card-body">
        <div class="text-center">
            <img src="@Model.ProfilePicURL" alt="Profile Picture" class="rounded-circle" style="width: 150px; height: 150px;" />
        </div>

        <ul class="list-group mt-3">
            <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
            <li class="list-group-item"><strong>Phone:</strong> @Model.PhoneNumber</li>
            <li class="list-group-item"><strong>Employer:</strong> @Model.Employer</li>
            <li class="list-group-item"><strong>Bio:</strong> @Model.Bio</li>
            <li class="list-group-item"><strong>Signature:</strong> @Model.Signature</li>
            <li class="list-group-item"><strong>Rating:</strong> @Model.Rating / 5</li>
        </ul>

        <div class="form-group mt-3">
            <label><strong>Rating:</strong></label>
            <input value="@Model.Rating / 5" class="form-control" disabled />
        </div>
        <hr />

        <!-- Skills Section -->
        <h4>Skills</h4>
        @if (Model.Skills != null && Model.Skills.Any())
        {
            @foreach (var skill in Model.Skills)
            {
                <div class="mb-2">
                    <strong>@skill.SkillName</strong> (Rating: @skill.SkillRating/5)
                    <p>@skill.SkillDescription</p>
                </div>
            }
        }
        else
        {
            <p>No skills added yet.</p>
        }

        @if (Context.Session.GetInt32("UserId") == Model.Id)
        {
            <a asp-action="UpdateProfile" class="btn btn-warning mt-3">Edit My Profile</a>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back</a>
</div>

