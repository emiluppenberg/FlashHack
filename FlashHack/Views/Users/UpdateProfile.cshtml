@model FlashHack.Models.User

@{
    ViewData["Title"] = "Update Profile";
}

<div class="container mt-4">
    <div class="card mb-3 post-item">
        <div class="card-header">
            <h3>@Model.FirstName @Model.LastName's Profile</h3>
        </div>
        <div class="card-body">
            <div class="text-center mb-4">
                <img src="@Model.ProfilePicURL" alt="Profile Picture" class="rounded-circle" style="width: 150px; height: 150px;" />
            </div>

            <!-- Profile Update Form -->
            <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <!-- First Name -->
                <div class="form-group mb-3">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                </div>

                <!-- Last Name -->
                <div class="form-group mb-3">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                </div>

                <!-- Phone Number -->
                <div class="form-group mb-3">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>

                <!-- Email -->
                <div class="form-group mb-3">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                </div>

                <!-- Password (Optional) -->
                <div class="form-group mb-3">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Leave blank to keep current password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Employer -->
                <div class="form-group mb-3">
                    <label asp-for="Employer" class="control-label"></label>
                    <input asp-for="Employer" class="form-control" />
                </div>

                <!-- Bio -->
                <div class="form-group mb-3">
                    <label asp-for="Bio" class="control-label"></label>
                    <textarea asp-for="Bio" class="form-control" rows="3"></textarea>
                </div>

                <!-- Signature -->
                <div class="form-group mb-3">
                    <label asp-for="Signature" class="control-label"></label>
                    <input asp-for="Signature" class="form-control" />
                </div>

                <!-- Profile Picture URL -->
                <div class="form-group mb-3">
                    <label asp-for="ProfilePicURL" class="control-label"></label>
                    <input asp-for="ProfilePicURL" type="url" class="form-control" placeholder="Paste image URL here" />
                    <span asp-validation-for="ProfilePicURL" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Save Profile Changes</button>
            </form>

            <hr />

            <!-- Existing Skills -->
            <h4>Your Skills</h4>
            @if (Model.Skills != null && Model.Skills.Any())
            {
                @foreach (var skill in Model.Skills)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>@skill.SkillName</strong> (Rating: @skill.SkillRating/5)
                            <p>@skill.SkillDescription</p>
                        </div>

                        <!-- 🟥 Separat formulär för att ta bort en färdighet -->
                        <form asp-action="DeleteSkill" method="post" onsubmit="return confirm('Are you sure you want to delete this skill?');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="skillId" value="@skill.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>No skills added yet.</p>
        }

            <hr />

            <!-- Add Skill Form -->
            <h5>Add New Skill</h5>
            <form asp-action="AddSkill" method="post">
                <div class="form-group mb-3">
                    <label for="SkillName" class="control-label">Skill Name</label>
                    <input type="text" name="SkillName" class="form-control" placeholder="Ex: C#, ASP.NET" required />

                    <label for="SkillDescription" class="control-label">Skill Description</label>
                    <textarea name="SkillDescription" class="form-control" placeholder="Brief description" required></textarea>

                    <label for="SkillRating" class="control-label">Skill Rating (1-5)</label>
                    <input type="number" name="SkillRating" class="form-control" min="1" max="5" required />

                    <button type="submit" class="btn btn-success mt-2">Add Skill</button>
                </div>
            </form>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to Home</a>
    </div>
</div>

